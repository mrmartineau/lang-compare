---
interface Props {
  slug: string
  name: string
}

const { slug, name } = Astro.props
---

<label
  class="lang-picker-item flex items-center gap-1.5 text-xs font-mono cursor-pointer select-none px-2 py-1 border border-border hover:bg-surface-alt transition-colors"
  data-lang-toggle={slug}
>
  <input type="checkbox" checked class="accent-accent" />
  <span>{name}</span>
</label>
