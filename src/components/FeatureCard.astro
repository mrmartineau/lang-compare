---
interface Props {
  title: string
}

const { title } = Astro.props
---

<div class="border border-border bg-surface h-full flex flex-col">
  <div class="border-b border-border px-4 py-2">
    <h3 class="text-sm font-semibold uppercase tracking-wide text-text-muted">
      {title}
    </h3>
  </div>
  <div class="p-4 max-w-none feature-content flex-1 flow">
    <slot />
  </div>
</div>

<style>
  @reference '../styles/global.css';

  .feature-content :global(p),
  .feature-content :global(li) {
    font-size: 0.875rem;
    line-height: 1.5;
    margin-bottom: 0;
    color: var(--color-text-muted);

    a {
      @apply text-accent hover:text-accent-hover underline underline-offset-2 font-medium;
    }
  }

  .feature-content :global(ul) {
    list-style-type: disc;
    margin-left: 1rem;
  }

  .feature-content :global(ol) {
    list-style-type: decimal;
    margin-left: 1rem;
  }

  .feature-content :global(code:not(pre code)) {
    font-size: 0.8125rem;
    padding: 0.125rem 0.25rem;
    background-color: var(--color-surface-code);
    border: 1px solid var(--color-border);
  }

  .feature-content :global(pre) {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
</style>
