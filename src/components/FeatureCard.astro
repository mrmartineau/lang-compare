---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="border border-[var(--color-border)] bg-[var(--color-surface)] h-full flex flex-col">
  <div class="border-b border-[var(--color-border)] px-4 py-2">
    <h3 class="text-sm font-semibold uppercase tracking-wide text-[var(--color-text-muted)]">{title}</h3>
  </div>
  <div class="p-4 max-w-none feature-content flex-1">
    <slot />
  </div>
</div>

<style>
  .feature-content :global(p) {
    font-size: 0.875rem;
    line-height: 1.5;
    margin-bottom: 0.75rem;
    color: var(--color-text-muted);
  }

  .feature-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .feature-content :global(code:not(pre code)) {
    font-size: 0.8125rem;
    padding: 0.125rem 0.25rem;
    background-color: var(--color-surface-code);
    border: 1px solid var(--color-border);
  }

  .feature-content :global(pre) {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
</style>
