---
interface Props {
  name: string
  description: string
  links?: Array<{ label: string; url: string }>
  slug?: string
}

const { name, description, links = [], slug } = Astro.props
---

<div class="border border-border bg-surface h-full flex flex-col">
  <div class="border-b border-border px-4 py-2">
    <h3 class="text-sm font-semibold uppercase tracking-wide text-text-muted">
      Overview
    </h3>
  </div>
  <div class="p-4 flex flex-col justify-between flex-1">
    <p class="text-sm text-text-muted">{description}</p>
    <div class="flex flex-wrap gap-2 mt-3">
      {slug && <a href={`/${slug}`}>View full page &rarr;</a>}
      {
        links.map((link) => (
          <a href={link.url} target="_blank" rel="noopener noreferrer">
            {link.label}
          </a>
        ))
      }
    </div>
  </div>
</div>

<style>
  @reference '../styles/global.css';
  a {
    @apply text-xs text-accent hover:text-accent-hover underline underline-offset-2 font-medium;
  }
</style>
